<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @books.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
      <table class='table'>
        <tr>
          <td><%= link_to user_path(@books.user_id) do %>
            <%= image_tag @books.user.get_profile_image, size:"100x100" %><br>
            <%= @books.user.name %>
            <% end %>
          </td>
          <td><%= link_to book_path(@books) do %>
              <%= @books.title %>
              <% end %>
          </td>
          <td><%= @books.body %></td>

          <!--応用課題3追加-->
          <td>
          <% if @books.favorited_by?(current_user) %>
            <p>
              <%= link_to book_favorites_path(@books.id), method: :delete do %>
              ♥<%= @books.favorites.count %>
              <% end %>

            <% else %>
            <p>
              <%= link_to book_favorites_path(@books.id), method: :post do %>
              ♡<%= @books.favorites.count %>
              <% end %>
            </p>
          <% end %>
          </td>
          <td><p>コメント件数:<%= @books.book_comments.count %></p></td>

          <% if @books.user.id == current_user.id %>
            <td><%= link_to 'Edit', edit_book_path(@books), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @books, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
        </tr>
      </table>

      <% @books.book_comments.each do |book_comment| %>
        <div class="media">
          <%= image_tag book_comment.user.get_profile_image, size: "50x50" %>
             <div class="media-body">
              <p class="mt-2"><%= book_comment.comment %>
              <% if book_comment.user == current_user %>
              <%= link_to "destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger" %></p>
              <% end %>
            </div>
        </div>
          <span><%= book_comment.user.name %></span>
      <% end %>

        <%= form_with model: [@books, @book_comment] do |f| %>
          <%= f.text_area :comment, rows: '5', class: "form-control mb-1" %>
          <%= f.submit "送信" %>
        <% end %>
    </div>

  </div>
</div>