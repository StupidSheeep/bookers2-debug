<% books.book_comments.each do |book_comment| %>
  <div class="media">
    <%= image_tag book_comment.user.get_profile_image, size: "50x50" %>
       <div class="media-body">
        <p class="mt-2"><%= book_comment.comment %>
        <% if book_comment.user == current_user %>
        <%= link_to "destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger", remote:true, data: {"turbolinks" => false} %></p>
        <% end %>
      </div>
  </div>
    <span><%= book_comment.user.name %></span>
<% end %>